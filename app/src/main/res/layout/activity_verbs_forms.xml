        android:textSize="18sp"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_form_1"
        app:layout_constraintStart_toStartOf="@id/tv_form_1"
        app:layout_constraintEnd_toEndOf="@id/tv_form_2"
        />

    <TextView
        android:id="@+id/tv_form_line"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/line"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_form_2"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="270dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_form_line"

        />

    <TextView
