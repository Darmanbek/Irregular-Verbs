<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout2">

    <TextView
        android:id="@+id/tv_dialog_qaraqalpaq"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Qaraqalpaq:"
        android:fontFamily="@font/font_two"
        android:textSize="18sp"

        android:layout_marginEnd="5dp"
        android:textColor="@color/black"
        android:gravity="bottom|right"
        android:background="@drawable/stroke"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_dialog_qaraqalpaq_text"
        app:layout_constraintEnd_toEndOf="@id/tv_dialog_past_participle"
        />

    <TextView
        android:id="@+id/tv_dialog_qaraqalpaq_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Qalay"
        android:textSize="24sp"
        android:padding="3dp"
        android:gravity="start|bottom"
        android:background="@drawable/stroke"
        android:fontFamily="@font/font_two"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/tv_dialog_qaraqalpaq"
        app:layout_constraintTop_toTopOf="@id/tv_dialog_qaraqalpaq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_dialog_verb_text"
        />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:layout_constraintBottom_toTopOf="@id/layout3">
    <TextView
        android:id="@+id/tv_dialog_verb"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Feyil:"

        android:layout_marginEnd="5dp"
        android:gravity="bottom|right"
        android:fontFamily="@font/font_two"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:background="@drawable/stroke"

        app:layout_constraintStart_toStartOf="@id/tv_dialog_past_participle"
        app:layout_constraintBottom_toBottomOf="@id/tv_dialog_verb_text"
        app:layout_constraintEnd_toEndOf="@id/tv_dialog_past_participle"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_qaraqalpaq"
        />

    <TextView
        android:id="@+id/tv_dialog_verb_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Hello\ndsadasdasd"
        android:textSize="24sp"

        android:gravity="start|bottom"
        android:background="@drawable/stroke"
        android:fontFamily="@font/font_two"
        android:textColor="@color/black"

        app:layout_constraintStart_toEndOf="@id/tv_dialog_verb"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_qaraqalpaq_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_dialog_past_tense_text"
        />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout2"
        app:layout_constraintBottom_toTopOf="@id/layout4">

    <TextView
        android:id="@+id/tv_dialog_past_tense"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="O'tken waqittin' feyili:"
        android:layout_weight="1"
        android:fontFamily="@font/font_two"

        android:layout_marginEnd="5dp"
        android:gravity="bottom|right"
        android:textSize="18sp"
        android:background="@drawable/stroke"
        android:textColor="@color/black"

        app:layout_constraintStart_toStartOf="@id/tv_dialog_past_participle"
        app:layout_constraintBottom_toBottomOf="@id/tv_dialog_past_tense_text"
        app:layout_constraintEnd_toEndOf="@id/tv_dialog_past_participle"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_verb"
        />

    <TextView
        android:id="@+id/tv_dialog_past_tense_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:minHeight="55dp"
        android:text="Good moring\ndsadasdasda\nsdaadasdasdas"
        android:textSize="24sp"


        android:background="@drawable/stroke"
        android:gravity="start|bottom"
        android:fontFamily="@font/font_two"
        android:textColor="@color/black"

        app:layout_constraintStart_toEndOf="@id/tv_dialog_past_tense"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_verb_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_dialog_past_participle_text"
        />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout3"
        app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/tv_dialog_past_participle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="O'tken waqittin'-\n-Kelbetlik feyil:"
        android:fontFamily="@font/font_two"

        android:layout_marginEnd="5dp"
        android:gravity="bottom|right"
        android:textSize="18sp"
        android:background="@drawable/stroke"
        android:textColor="@color/black"

        app:layout_constraintStart_toStartOf="@+id/tv_dialog_qaraqalpaq"
        app:layout_constraintBottom_toBottomOf="@id/tv_dialog_past_participle_text"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_past_tense"
        />

    <TextView
        android:id="@+id/tv_dialog_past_participle_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Exlelent\ndsadasdsa\ndfsadasdas"
        android:minHeight="55dp"
        android:textSize="24sp"

        android:gravity="start|bottom"
        android:background="@drawable/stroke"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/font_two"
        android:textColor="@color/black"

        app:layout_constraintStart_toEndOf="@id/tv_dialog_past_participle"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_past_tense_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>